{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "blockylicious/curvy",
	"version": "0.1.0",
	"title": "Curvy",
	"category": "blockylicious",
	"icon": "smiley",
	"description": "Example block scaffolded with Create Block tool.",
	"example": {
		"innerBlocks": [
			{
				"name": "core/heading",
				"attributes": {
					"content": "Lorem Ipsum."
				}
			},
			{
				"name": "core/paragraph",
				"attributes": {
					"content": "This is an example of a curvy block."
				}
			}
		]
	},
	"supports": {
		"html": false,
		"color": {
			"background": true,
			"text": true,
			"link": true
		},
		"spacing": {
			"padding": true
		}
	},
	"variations": [
		{
			"name": "top-only",
			"title": "Curvy Top Only",
			"attributes": {
				"enableTopCurve": true,
				"enableBottomCurve": false
			}
		},
		{
			"name": "bottom-only",
			"title": "Curvy Bottom Only",
			"attributes": {
				"enableTopCurve": false,
				"enableBottomCurve": true
			}
		}
	],
	"attributes": {
		"style": {
			"type": "object",
			"default": {
				"color": {
					"text": "black",
					"link": "blue"
				},
				"spacing": {
					"padding": {
						"top": "80px",
						"bottom": "80px",
						"left": "50px",
						"right": "50px"
					}
				}
			}
		},
		"enableTopCurve": {
			"type": "boolean",
			"default": true
		},
		"width": {
			"type": "number",
			"default": 100
		},
		"height": {
			"type": "number",
			"default": 100
		},
		"flipX": {
			"type": "boolean",
			"default": false
		},
		"flipY": {
			"type": "boolean",
			"default": false
		},
		"color": {
			"type": "object",
			"default": {
				"background": "#fff"
			}
		},
		"enableBottomCurve": {
			"type": "boolean",
			"default": false
		},
		"bottomWidth": {
			"type": "number",
			"default": 100
		},
		"bottomHeight": {
			"type": "number",
			"default": 100
		},
		"bottomFlipX": {
			"type": "boolean",
			"default": false
		},
		"bottomFlipY": {
			"type": "boolean",
			"default": false
		},
		"bottomColor": {
			"type": "object",
			"default": {
				"background": "#fff"
			}
		}
	},
	"textdomain": "blockylicious",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"viewScript": "file:./view.js",
	"render": "file:./render.php"
}
